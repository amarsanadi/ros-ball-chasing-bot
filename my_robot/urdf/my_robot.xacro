<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <link name="chassis">
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>


    <collision name="base_collision">
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
    </collision>

    <visual name="base_visual">
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
  
    </visual>

    <collision name="base_castor_block">
      <origin xyz="0 0.21 0.05" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.08 0.15 .1"/>
      </geometry>
    </collision>

    <visual name="base_castor_block">
      <origin xyz="0 0.21 0.05" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.08 0.15 .1"/>
      </geometry>
    </visual>

    <collision name="body_collision">
      <origin xyz="0 0 0.45" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.35 0.25 0.5"/>
      </geometry>
    </collision>

    <visual name="body_visual">
      <origin xyz="0 0 0.45" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.35 0.25 0.5"/>
      </geometry>
    </visual>

    <visual name="caster_visual">
      <origin xyz="0.0 0.225 -0.03" rpy="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="ball_material">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>

    <collision name="caster_collision">
      <origin xyz="0.0 0.225 -0.03" rpy="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

  </link>

  <link name="side_wheel_right">
    <inertial>
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual name="side_wheel_visual">
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
      <material name="">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_hinge" type="continuous">
    <origin xyz="0.22 -0.1 0.06" rpy="0.0 0.0 0.0"/>
    <parent link="chassis"/>
    <child link="side_wheel_right"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="side_wheel_left">
    <inertial>
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual name="side_wheel_visual">
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
      <material name="">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_hinge" type="continuous">
    <origin xyz="-0.22 -0.1 0.06" rpy="0.0 0.0 0.0"/>
    <parent link="chassis"/>
    <child link="side_wheel_left"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  


<link name="head">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <mass value="2.0"/>
    <inertia
          ixx="0.05" ixy="0.05" ixz="0.05"
          iyy="0.05" iyz="0.05"
          izz="0.05"
      />
  </inertial>
  <visual name="head_visual">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <geometry>
      <box size="0.35 0.25 0.2"/>
    </geometry>
  </visual>
  <collision>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <geometry>
      <box size="0.35 0.25 0.2"/>
    </geometry>
  </collision>
</link>

<joint name="neck_joint" type="revolute">
  <origin xyz="0.0 0.0 0.801" rpy="0.0 0.0 0.0"/>
  <parent link="chassis"/>
  <child link="head"/>
  <axis xyz="0 0 1"/>
  <limit lower="-1.5707" upper="1.5707" effort="50.0" velocity="00.0"/>
  <dynamics damping="1.0" friction="1.0"/>
</joint>
  
<gazebo reference="side_wheel_right">
  <material>Gazebo/BlueLaser</material>
</gazebo>

<gazebo reference="base_visual">
  <material>Gazebo/Red</material>
</gazebo>

<gazebo reference="side_wheel_left">
  <material>Gazebo/BlueLaser</material>
</gazebo>

<gazebo reference="head">
  <material>Gazebo/Yellow</material>
</gazebo>

</robot>